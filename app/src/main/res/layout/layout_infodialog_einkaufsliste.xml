<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryTransparent"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/dialog_info_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/einkauf_info_produkt" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/dialog_info_wg"
            android:layout_width="@dimen/dialog_info_icon_space"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_person_24dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/dialog_info_wgtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/einkauf_info_mb" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/dialog_info_add"
            android:layout_width="@dimen/dialog_info_icon_space"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_black_24dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/dialog_info_addtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/einkauf_info_add" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/dialog_info_checkbox"
            android:layout_width="@dimen/dialog_info_icon_space"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check_box_24dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/dialog_info_checktext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/einkauf_info_checkbox" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">

        <Button
            android:id="@+id/dialog_info_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_button_einkaufsliste"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/dialog_info_buttontext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/einkauf_info_button" />
    </LinearLayout>

</LinearLayout>