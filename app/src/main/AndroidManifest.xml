<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="e.rosti.listery">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_circle_green"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_circle_green"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PreiseingabeActivity" />

        <receiver android:name=".EinkaufslisteWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/einkaufsliste_widget_info" />
        </receiver>
        <receiver android:name=".EinkaufslisteWidgetDetail">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/einkaufsliste_widget_detail_info" />
        </receiver>
    </application>

</manifest>